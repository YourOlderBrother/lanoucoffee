<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lanou.dao.CustomerDao">
<insert id="addCustomer" parameterType="Customer">
insert into customer (cus_account,cus_password,cus_name,cus_sex,cus_address) values
(#{cus.cusAccount},#{cus.cusPassword},#{cus.cusName},#{cus.cusSex},#{cus.cusAddress})
</insert>
<update id="updateCustomer" parameterType="Customer">
update customer set cus_password=#{cus.cusPassword},cus_name=#{cus.cusName},cus_sex=#{cus.cusSex},cus_address=#{cus.cusAddress} where cus_account = #{cus.cusAccount}
</update>
<select id="queryCustomer" parameterType="int" resultType="Customer">
select *from customer where cus_account=#{cus.cusAccount}
</select>
<select id="queryAll" resultType="list">
select*from customer
</select>

</mapper>
